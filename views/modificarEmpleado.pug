doctype html
html(lang="es")
	head
		title Access Logic - Modificar Empleado
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width")
		link(rel="stylesheet" type="text/css" href="../css/foundation.css")
		link(rel="stylesheet" type="text/css" href="../css/app.css")
		script(src="../js/jquery-1.12.0.min.js" )
		script(src="../js/vendor/foundation.js")
		script(src="../js/app.js" type="text/javascript" charset="utf-8" async)
body
	div(class="row expanded")
		div(class="small-12 medium-12 large-12 columns verde")
			div(class="small-12 medium-12 large-12 columns")
				img(src="../img/Logo.png" class="logoP")
				p(class="nombre negrita") Access Logic
				br
				
	div(class="row expanded")
		div(class="small-2 medium-2 large-2 columns me")
			div(class="small-5 small-offset-2 medium-5 medium-offset-2 large-5 large-offset-2 foto")
				img(src="../img/foto.png")
			div(class="small-12 medium-12 large-12 columns user")
				p #{user.nombre} #{user.apPaterno} #{user.apMaterno}
			div(class="menu large-12 row expanded item")
				li
					a(href="/calendario") Calendario
			div(class="menu large-12 row expanded item")
				li
					a(href="/horario") Horario
			if user.isAdmin
				div(class="menu large-12 row expanded item")
					li
						a(href="/users") Usuarios		
			div(class="menu large-12 row expanded item")
				li
					a(href="/incidencias") Incidencias
			div(class="menu large-12 row expanded item")
				li
					a(href="/signout") Cerrar Sesión	
		div(class="small-10 medium-10 large-10 columns")
			div(id="workarea")
				div(class="row")
					div(class="small-10 small-offset-1 medium-10 medium-offset-1 large-10 large-offset-1 titOptions columns")
						p(class="negrita") Modificar Empleado
					div(class="small-12 medium-12 large-12 columns")
						div(class="small-10 smll-offset-1 medium-10 medium-offset-1 large-10 large-offset-1 columns")
							form(method='POST', action='/users/'+userModificar._id+'?_method=PUT')
								
								div(class="row")
									div(class="small-4 medium-4 large-4 columns")
										label Nombre(s)
									div(class="small-8 medium-8 large-8 columns")
										input(type="text" class="radio" style="height: 35px;" placeholder="Nombre(s)" name="nombre" value=userModificar.nombre)
								div(class="row")
									div(class="small-4 medium-4 large-4 columns")
										label Apellido Paterno
									div(class="small-8 medium-8 large-8 columns")
										input(type="text" class="radio" style="height: 35px;" placeholder="Apellido Paterno" name="apPaterno" value=userModificar.apPaterno)
								div(class="row")
									div(class="small-4 medium-4 large-4 columns")
										label Apellido Materno
									div(class="small-8 medium-8 large-8 columns")
										input(type="text" class="radio" style="height: 35px;" placeholder="Apellido Materno" name="apMaterno" value=userModificar.apMaterno)
								div(class="row")
									div(class="small-4 medium-4 large-4 columns")
										label Dirección
									div(class="small-8 medium-8 large-8 columns")
										input(type="text" class="radio" style="height: 35px;" placeholder="Dirección" name="direccion" value=userModificar.direccion)
								div(class="row")
									div(class="small-4 medium-4 large-4 columns")
										label Teléfono
									div(class="small-8 medium-8 large-8 columns")
										input(type="text" title="Teléfono de 8 a 10 digitos " placeholder="Teléfono" pattern="[0-9]{8,10}" class="radio" style="height: 35px;" name="telefono" value=userModificar.telefono)
								div(class="row")
									div(class="small-4 medium-4 large-4 columns")
										label E-Mail
									div(class="small-8 medium-8 large-8 columns")
										input(type="text" title="usuario@dominio.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" class="radio" style="height: 35px;" placeholder="E-Mail" name="email"  value=userModificar.email)
								
								div(class="row")
										div(class="small-3 medium-3 large-3 columns")
											label Fecha de Nacimiento
										div(class="small-7 medium-7 large-8 columns")
											input(type="date" name="fechaNac" required class="radio" style="height: 35px;" value=userModificar.fNac)
								div(class="row")
									div(class="small-3 medium-3 large-3 columns")
										label Tipo de Empleado
									div(class="small-7 medium-7 large-8 columns")
										section
											select(name="tEmpleado" class="radio" style="height: 35px;")
												each val, index in puestos
													if userModificar.tEmpleado.nombre == val.nombre
														option(selected="selected")=val.nombre
													else
														option=val.nombre
								div(class="row")
									div(class="small-3 medium-3 large-3 columns")
										label ¿Administrador del sistema?
									div(class="small-7 medium-7 large-8 columns")
										section
											select(name="isAdmin" class="radio" style="height: 35px;")
												if userModificar.isAdmin
													option(selected="selected") Si
													option No
												else
													option(selected="selected") No
													option Si
								div(class="row")
									div(class="small-3 medium-3 large-3 columns")
										label Número de Tarjeta
									div(class="small-7 medium-7 large-8 columns")
										sections
											select(name="serieTarjeta" class="radio" style="height: 35px;")
												each val, index in cards
													if userModificar.iTarjeta.serie == val.serie
														option(selected="selected")=val.serie
													else
														option=val.serie
								div(class="row")
									div(class="small-3 medium-3 large-3 columns")
										label Nombre de usuario
									div(class="small-7 medium-7 large-8 columns")
										input(type="text" value=userModificar.iLogin.usuario name="username" placeholder="Nombre de usuario" required class="radio" style="height: 35px;")
								div(class="row")
									div(class="small-3 medium-3 large-3 columns")
										label Contraseña
									div(class="small-7 medium-7 large-8 columns")
										input(type="password" value=userModificar.iLogin.password placeholder="Contraseña" name="password" required class="radio" style="height: 35px;")
								div(class="row")
									div(class="large-4 large-offset-2 columns")
										button(type='submit' class="button radio") Modificar
										
									div(class="large-4 columns")
										a(href="/users" class="button radio") Cancelar
	div(class="small-12 medium-12 large-12 verde columns" id="footer")
